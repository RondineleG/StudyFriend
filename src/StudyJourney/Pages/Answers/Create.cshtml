@page
@model StudyJourney.Pages.Answers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add an Answer</h2>

<hr />
<div class="row">
    <div class="col-lg-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Answer.Question" class="control-label"></label>
                <select asp-for="Answer.QuestionID" class ="form-control" 
                        asp-items="@Model.QuestionBodySL">
                    <option value="">-- Select Question --</option>
                </select>
                <span asp-validation-for="Answer.QuestionID" class="text-danger"></span>    

            </div>            
            <div class="form-group">
                <label asp-for="Answer.Body" class="control-label"></label>
                <textarea asp-for="Answer.Body" class="form-control" ></textarea>
                <span asp-validation-for="Answer.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Questions/Details" asp-route-id="@Request.Query["questionId"]">Back to Question</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
