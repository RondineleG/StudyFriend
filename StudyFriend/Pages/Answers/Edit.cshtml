@page
@model StudyFriend.Pages.Answers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Answer.AnswerID" />
            <div class="form-group">
                <label asp-for="Answer.QuestionID" class="control-label"></label>
                <select asp-for="Answer.QuestionID" class="form-control" asp-items="ViewBag.QuestionID"></select>
                <span asp-validation-for="Answer.QuestionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answer.Body" class="control-label"></label>
                <input asp-for="Answer.Body" class="form-control" />
                <span asp-validation-for="Answer.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
