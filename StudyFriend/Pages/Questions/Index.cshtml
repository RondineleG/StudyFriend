@page
@model StudyFriend.Pages.Questions.IndexModel

@{
    ViewData["Title"] = "Questions";
}

<h2>Questions</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>


<section class="row">
    @foreach (var item in Model.Question)
    {
        <div class="col-md-6 mb-4">
            <div class="card p-3 pb-0 text-center">
                <div>
                    <a asp-page="../Topics/Details" asp-route-id="@item.Topic.TopicID">
                        @Html.DisplayFor(modelItem => item.Topic.Name)
                    </a>
                </div>
                <h3 class="mt-2 mb-2">
                    <a asp-page="./Details" asp-route-id="@item.QuestionID">
                        @Html.DisplayFor(modelItem => item.Body)
                    </a>
                </h3>
                <hr />
                <div class="small mt-0">
                    <a asp-page="./Edit" asp-route-id="@item.QuestionID">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.QuestionID">Delete</a>
                </div>
            </div>
        </div>
    }

</section>